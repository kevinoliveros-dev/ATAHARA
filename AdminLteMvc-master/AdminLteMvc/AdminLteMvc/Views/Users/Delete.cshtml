@model AdminLteMvc.Models.WEBSales.Users

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Are you sure you want to delete this?</h3>
    </div><!-- /.box-header -->
    <div class="box-body">

    </div>
    <div class="box-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Confirm" style="width:80px" class="btn btn-primary" />
                <input type="button" value="Cancel" style="width:80px" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Users")'" />
            </div>
        }
    </div>
</div>
